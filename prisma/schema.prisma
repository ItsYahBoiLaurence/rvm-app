generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  messageID String @id
  timestamp String
  userID    String
  sign      String
}

model TransactionData {
  id         String  @id @default(cuid())
  rvmID      String
  timestamp  String
  totalCount String
  totalValue String
  item       String
  messageID  String
  userID     String?
  sign       String
}

enum Role {
  Admin
  Viewer
  Editor
}

model ApiKey {
  apiKey       String
  name         String
  description  String
  isActive     Boolean  @default(true)
  dateCreated  DateTime @default(now())
  companyOwner String
  role         Role
  id           String   @id @default(cuid())
  rvmList      RVM[]
}

model RVM {
  id       String  @id @default(cuid())
  rvmId    String  @unique
  apiKeyId String?
  apiKey   ApiKey? @relation(fields: [apiKeyId], references: [id])
}
